<html>

<head>
    <meta charset="UTF-8">
    <title>Connexion</title>
    <link rel="stylesheet" href="/css/connexion.css">
</head>

<body>
    <div class="box">
        <div class="form">
            <form action="#" method="post">
                <div style="text-align: center;">
                    <h2>Connexion</h2>
                    <% if(locals.newUser){ %>
                    <p style="color: lime;">Votre compte a bien été créé!</p>
                    <% } %>
                </div>
                <div class="inputBox">
                    <input type="email" name="email" required>
                    <span>Adresse email</span>
                    <i></i>
                </div>
                <div class="inputBox">
                    <input type="password" name="mdp" required>
                    <span>Mot de passe</span>
                    <i></i>
                </div>
                <div class="links">
                    <a href="https://github.com/esig-ge/weba-2022-SebastienPnntr" target="_blank">Repos GIT</a>
                    <a href="../inscription">Inscription</a>
                </div>
                <input type="submit" value="Connexion">
            </form>
            <% if(locals.error){ %>
            <div class="modal">
                <img class="imgModal" src="https://100dayscss.com/codepen/alert.png" width="44" height="38" />
                    <span class="titleModal">Erreur!</span>
                    <p class="textModal"><%= error %></p>
                    <div class="buttonModal" onclick="hideModal()">Dismiss</div>
            </div>
            <% } %>
        </div>
    </div>
</body>

<% if(locals.error){ %>
<script>
    function hideModal(){
        document.getElementsByClassName("modal")[0].classList.add("hideModal")
    }
</script>
<% } %>

</html>
<script>
    let password = $("#password")
    let submitButton = $("#submitButton")
    let passwordConfirm = $("#passwordConfirm")
    let messageConfirm = $("#passwordConfirmMessage")
    let messageValidate = $("#passwordValidateMessage")

    submitButton.addClass("disabled")
    messageConfirm.hide()
    messageValidate.hide()

    let passwordOk = false
    let passwordConfirmOk = false

    function passwordConfirmCheck() {
        if (password.val() == passwordConfirm.val() && password.val() != "" && passwordConfirm.val() != "") {
            messageConfirm.hide()
            passwordConfirmOk = true
        } else {
            messageConfirm.show()
            passwordConfirmOk = false
        }
        validate()
    }

    function passwordCheck() {
        let specialChar = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,255}$/;
        if (password.val().length >= 8 && password.val() != "" && password.val().match(specialChar)) {
            messageValidate.hide()
            passwordOk = true
        } else {
            messageValidate.show()
            passwordOk = false
        }
        validate()
    }

    function validate() {
        if (passwordOk == true && passwordConfirmOk == true) {
            submitButton.removeClass("disabled")
        } else {
            submitButton.addClass("disabled")
        }
    }
</script>

